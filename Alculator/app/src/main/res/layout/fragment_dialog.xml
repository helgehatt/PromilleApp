<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/dialog_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Tuborg Guld"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/dialog_alcoholPercentage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="5,7%"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/dialog_volume"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="33 cl"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/dialog_calories"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="187 kcal"
            android:paddingBottom="10dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:layout_alignParentRight="true"
        android:src="@drawable/guldoel"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_toRightOf="@+id/linearLayout"/>

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_image"
        android:weightSum="1">

        <Button
            android:id="@+id/dialog_button_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/image"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/dialog_button_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/image"
            android:layout_weight="0.5" />

    </TableRow>

</RelativeLayout>