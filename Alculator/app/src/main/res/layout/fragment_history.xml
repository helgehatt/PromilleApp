<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="25dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:gravity="center">
        <TextView
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="@string/history_current"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="left"
            android:layout_weight="1"/>
        <TextView
            android:text="@string/history_total"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="right"
            android:layout_weight="1"/>
        <TextView
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="@string/history_volume"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="1.33"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="4.66"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="L"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="@string/history_quantity"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="4"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="14"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="@string/history_alcohol"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="60"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="220"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="mL"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="@string/history_calories"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="540"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="1890"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="kcal"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>

</TableLayout>