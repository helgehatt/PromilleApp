<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fragment_history"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="25dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:gravity="center">
        <TextView
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="@string/history_current"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="left"
            android:layout_weight="1"/>
        <TextView
            android:text="@string/history_total"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="right"
            android:layout_weight="1"/>
        <TextView
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="@string/history_volume"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/cVolume"
            android:text="1.33"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tVolume"
            android:text="4.66"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="@string/history_liters"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="@string/history_quantity"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/cQuantity"
            android:text="4"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tQuantity"
            android:text="14"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="x"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="@string/history_alcohol"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/cAlcohol"
            android:text="60"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tAlcohol"
            android:text="220"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="@string/history_centiliters"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="@string/history_calories"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/cCalories"
            android:text="540"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tCalories"
            android:text="1890"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:text="@string/history_kcal"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </TableRow>

</TableLayout>